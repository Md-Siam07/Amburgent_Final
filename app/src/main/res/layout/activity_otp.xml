<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPpage"
    android:background="@drawable/bgs"
    android:weightSum="7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:text="We Send A Verification Code To Your Phone.Please Enter It To Verify."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >

        <com.goodiebag.pinview.Pinview
            android:id="@+id/pinview"
            app:pinBackground="@drawable/ic_rectangle15"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:pinWidth="40dp"
            app:pinHeight="40dp"
            app:pinLength="6"
            app:splitWidth="8dp"
            android:layout_gravity="center"
            app:textSize="8sp"
            app:cursorVisible="true"
            app:hint="0"
            app:inputType="number"
            app:password="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="345dp"
            android:background="@drawable/ic_resendg"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:onClick="verify"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_verify"/>
    </LinearLayout>



</LinearLayout>